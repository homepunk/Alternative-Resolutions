<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/item_criteria_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="K1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_small_margin_padding"
            android:text="{"
            android:textSize="@dimen/default_large_text_size" />

        <LinearLayout
            android:id="@+id/item_criteria_valuations_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/item_criteria_valuation_the_worst"
                layout="@layout/item_criteria_valuation" />

            <include
                android:id="@+id/item_criteria_valuation_worse"
                layout="@layout/item_criteria_valuation"
                android:visibility="gone" />

            <include
                android:id="@+id/item_criteria_valuation_bad"
                layout="@layout/item_criteria_valuation" />

            <include
                android:id="@+id/item_criteria_valuation_normal"
                layout="@layout/item_criteria_valuation"
                android:visibility="gone" />

            <include
                android:id="@+id/item_criteria_valuation_good"
                layout="@layout/item_criteria_valuation" />

            <include
                android:id="@+id/item_criteria_valuation_better"
                layout="@layout/item_criteria_valuation"
                android:visibility="gone" />

            <include
                android:id="@+id/item_criteria_valuation_the_best"
                layout="@layout/item_criteria_valuation" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/item_criteria_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_small_margin_padding">

            <ImageView
                android:layout_width="@dimen/default_small_image_size_24"
                android:layout_height="@dimen/default_small_image_size_24"
                android:src="@drawable/circle" />

            <TextView
                android:layout_width="@dimen/default_small_image_size_24"
                android:layout_height="@dimen/default_small_image_size_24"
                android:gravity="center"
                android:text="+"
                android:textSize="@dimen/default_small_text_size" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="}"
            android:textSize="@dimen/default_large_text_size" />
    </LinearLayout>
</LinearLayout>